<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.poisondart.showcase">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Showcase">
        <activity android:name="com.poisondart.showcase.MenuActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.poisondart.showcase.games.blockparty.BlockPartyActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.poisondart.showcase.games.arkanoid.ArkanoidActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.poisondart.showcase.games.scroll_shooter.ScrollShooterActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>